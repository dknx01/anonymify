{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "truncate": {
      "description": "List of table to be truncated",
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "json": {
      "description": "List of columns and tables that should become an empty json",
      "type": "object",
      "items": [
        {
          "$ref": "#/defs/columnList"
        }
      ]
    },
    "binary_empty": {
      "description": "List of columns and tables that should become NULL because they're binary",
      "type": "object",
      "items": [
        {
          "$ref": "#/defs/columnList"
        }
      ]
    },
    "static_text": {
      "description": "List of columns that should contain a static text",
      "type": "object",
      "items": [
        {
          "$ref": "#/defs/columnListValues"
        }
      ]
    },
    "scripts": {
      "description": "List of sql script to be executed as they are",
      "type": "array",
      "items": [
        {
          "type": "string",
          "description": "path to the script starting from the pre-processing script location"
        }
      ]
    },
    "default_masking": {
      "description": "List of columns in all tables that should be masked by default rule (AB****YZ). If the columns has a value \"null\" it will masking in all tables, or you can specify a list of exclude tables",
      "type": "object",
      "items": [
        {
          "type": [
            "string",
            "null"
          ],
          "description": "null if this column should be masked always, or a table to exclude from masking and keeping it values"
        }
      ]
    },
    "tables": {
      "description": "List of tables and it's columns with static values to be set",
      "type": "object",
      "items": [
        {
          "type": [
            "string",
            "integer"
          ],
          "description": "static values for the columns"
        }
      ]
    },
    "obfuscate": {
      "description": "Definition of obfuscating data in columns and tables",
      "type": "object",
      "$ref": "#/defs/obfuscate"
    }
  },
  "required": [
    "truncate",
    "default_masking",
    "obfuscate"
  ],
  "defs": {
    "columnList": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "columnListValues": {
      "type": "array",
      "items": {
        "type": "object",
        "items": {
          "type": "string"
        }
      }
    },
    "obfuscate": {
      "type": "object",
      "properties": {
        "general": {
          "description": "list of column names and name of the obfuscate strategy",
          "type": "object",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/defs/columnListValues"
              }
            ]
          }
        },
        "tables": {
          "description": "Definition of table based obfuscate hanlding",
          "type": "object",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "args": {
                    "type": "array"
                  }
                },
                "required": [
                  "type"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "general",
        "tables"
      ]
    }
  }
}